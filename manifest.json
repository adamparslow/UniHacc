{
  "manifest_version": 2,

  "name": "DeClutter",
  "description": "Simple, elegant bookmarks with groups.",
  "version": "1.0",

  "content_scripts": [
      {
        "js": ["scripts/popup.js", "js/bootstrap.min.js"],
        "css": ["css/bootstrap.min.css"]
      }
  ],

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ]
}
